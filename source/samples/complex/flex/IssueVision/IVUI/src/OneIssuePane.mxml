		</ns1:HistoryList>
	</mx:Panel>
	
	<mx:Script>
		<![CDATA[
		
			public function set IssueTitle(value:String):void
			{
				labelTitle.text = value;
			}
			
			public function set IssueDescription(value:String):void
			{
				labelDescription.text = value;
			}
			
			public function set IssueID(value:int):void
			{
				detailNumber.text = value.toString();
			}
			
			public function set IssueStatus(value:String):void
			{
				detailStatus.text = value;
			}
			
			public function set IssueOpened(value:String):void
			{
				detailOpened.text = value;
			}
			
			public function set IssueCategory(value:String):void
			{
				detailCategory.text = value;
			}
			
			public function set AssignedTo(value:String):void
			{
				detailAssigned.text = value;
			}
		]]>
	</mx:Script>
	
</mx:Canvas>
